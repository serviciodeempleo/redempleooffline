        Background="White"
        Title="RedEmpleoOffLine Editar Persona"  Height="649.7" Width="1100"
         x:Name="RedEmpleoOffLine" AllowDrop="True" ResizeMode="NoResize" >
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
