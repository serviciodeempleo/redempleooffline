<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:helpers="clr-namespace:RedEmpleoOffLine.Helpers"
         xmlns:Model="clr-namespace:RedEmpleoOffLine.Model" x:Class="RedEmpleoOffLine.ViewModel.EditPersona" WindowStartupLocation="CenterScreen"
        Background="White"
        Title="RedEmpleoOffLine Editar Persona"  Height="649.7" Width="1100"
         x:Name="RedEmpleoOffLine" ResizeMode="NoResize" >

    <Window.Resources>
        <!-- Error template for changing behaviour -->
        <ControlTemplate x:Key="validationTemplate">
            <DockPanel>
                <TextBlock Foreground="Red" FontSize="20">!</TextBlock>
                <AdornedElementPlaceholder/>
            </DockPanel>
        </ControlTemplate>
        <ControlTemplate x:Key="ErrorTemplate">
            <DockPanel LastChildFill="True">
                <Border BorderBrush="Red" BorderThickness="1">
                    <AdornedElementPlaceholder />
                </Border>
            </DockPanel>
        </ControlTemplate>
        <Style TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDEDD" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True" >
                    <Setter Property="Background" Value="#FFDEDD" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <helpers:ErrorsToMessageConverter x:Key="eToMConverter"></helpers:ErrorsToMessageConverter>
        <Model:ErrorCollectionConverter x:Key="ErrorCollectionConverter"/>
        <Style x:Key="textBoxInError" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid HorizontalAlignment="Center" Width="1090">
        <Grid.DataContext>
            <Model:Person/>
        </Grid.DataContext>
        <Image x:Name="Logo"   HorizontalAlignment="Left" Height="59" VerticalAlignment="Top" Width="150" Margin="571,17,0,0"/>
        <Label Content="SOLICITUD DE INSCRIPCIÓN" HorizontalAlignment="Left" Margin="22,15,0,0" VerticalAlignment="Top" Width="199" Background="#FFDD1721" FontSize="14" Foreground="White"/>
        <Label Content="(*) campos obligatorios" HorizontalAlignment="Left" Margin="374,19,0,0" VerticalAlignment="Top" Height="25" Width="134" RenderTransformOrigin="0.5,0.5"/>
        <Label Content="Diligencie la ficha con los datos y presione en el botón enviar para confirmar el registro.&#xA;En caso de dificultad en el diligenciamiento de la información por favor contáctenos" HorizontalAlignment="Left" Margin="22,44,0,0" VerticalAlignment="Top" Width="487" Height="48" Background="#FFE4FDF5" Foreground="#FF020202"/>
        <Label Content="DATOS PERSONALES" HorizontalAlignment="Left" Margin="22,93,0,0" VerticalAlignment="Top" Width="199" Background="#FFDD1721" FontSize="14" Foreground="White"/>
        <Label Content="Primer Nombre*" HorizontalAlignment="Left" Margin="22,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.789,0.327"/>
        <Label Content="Segundo Nombre" HorizontalAlignment="Left" Margin="22,169,0,0" VerticalAlignment="Top"/>
        <Label Content="Primer Apellido*" HorizontalAlignment="Left" Margin="22,213,0,0" VerticalAlignment="Top"/>
        <Label Content="Segundo Apellido" HorizontalAlignment="Left" Margin="22,251,0,0" VerticalAlignment="Top"/>
        <Label Content="Sexo* " HorizontalAlignment="Left" Margin="22,291,0,0" VerticalAlignment="Top"/>
        <Label Content="Tipo Documento*" HorizontalAlignment="Left" Margin="22,332,0,0" VerticalAlignment="Top"/>
        <Label Content="Número Documento*" HorizontalAlignment="Left" Margin="22,379,0,0" VerticalAlignment="Top"/>
        <Label Content="Repetir Número*" HorizontalAlignment="Left" Margin="22,420,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha de Nacimiento*(dd/mm/aaaa)" HorizontalAlignment="Left" Margin="22,466,0,0" VerticalAlignment="Top"/>
        <Label Content="Correo Electrónico*" HorizontalAlignment="Left" Margin="563,381,0,0" VerticalAlignment="Top"/>
        <Label Content="Repite Correo Electrónico*" HorizontalAlignment="Left" Margin="565,419,0,0" VerticalAlignment="Top"/>
        <TextBox Name="PrimerNombre" Text="{Binding PrimerNombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" HorizontalAlignment="Left" Height="20" Margin="228,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <TextBlock Margin="228,153,582,429"  Foreground="Red" FontWeight="Bold"   Text="{Binding ElementName=PrimerNombre, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}" />
        <TextBox Name="SegundoNombre" Text="{Binding SegundoNombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" HorizontalAlignment="Left" Height="20" Margin="228,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <TextBlock Name= "SegundoNombreError" Margin="228,193,582,399"  Foreground="Red" FontWeight="Bold"   Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}, ElementName=SegundoNombre}" />
        <TextBox Name="PrimerApellido" Text="{Binding PrimerApellido, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="20" Margin="228,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <TextBlock Margin="228,235,582,357"  Foreground="Red" FontWeight="Bold"   Text="{Binding ElementName=PrimerApellido, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}" />
        <TextBox Name="SegundoApellido"  Text="{Binding SegundoApellido, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"  HorizontalAlignment="Left" Height="20" Margin="228,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <TextBlock Name= "SegundoApellidoError" Margin="228,274,582,318"  Foreground="Red" FontWeight="Bold"   Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}, ElementName=SegundoApellido}" />
        <RadioButton Name="Femenino" GroupName="Sexo" Content="Femenino" HorizontalAlignment="Left" Margin="230,298,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.218,0.4" />
        <RadioButton Name="Masculino" GroupName="Sexo" Content="Masculino" HorizontalAlignment="Left" Margin="334,298,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.218,0.4"/>
        <TextBlock Name="Sexo" Text="Campo sexo es obligatorio" Margin="228,315,0,0" Visibility="Hidden"  Foreground="Red" FontWeight="Bold" />
        <ComboBox Name="TipoDocumento" HorizontalAlignment="Left" Margin="228,335,0,0" VerticalAlignment="Top" Width="280" Text="Seleccione Tipo Documento" Height="20" SelectionChanged="TipoDocumento_SelectionChanged">
            <ComboBoxItem Tag="CC" Content="CÉDULA DE CIUDADANÍA"/>
            <ComboBoxItem Tag="TI" Content="TARJETA DE IDENTIDAD"/>
            <ComboBoxItem Tag="PA" Content="PASAPORTE"/>
            <ComboBoxItem Tag="CE" Content="CÉDULA EXTRANJERÍA"/>
        </ComboBox>
        <TextBlock Name="TipoDocumentoError" Text="Campo Tipo Documento es obligatorio" Margin="228,356,0,0" Visibility="Hidden"  Foreground="Red" FontWeight="Bold" />
        <TextBox Name="NoDocumento" IsReadOnly="True" Text="{Binding NoDocumento, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True ,ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="20" Margin="228,380,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" />
        <PasswordBox Name="NoDocumentoPASS" Visibility="Hidden" HorizontalAlignment="Left" Height="20" Margin="228,380,0,0" VerticalAlignment="Top" Width="280" PasswordChanged="DocumentoHandler"/>
        <TextBlock Margin="228,400,581,162"  Foreground="Red" FontWeight="Bold"   Text="{Binding ElementName=NoDocumento, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}" />
        <TextBox Name="RepetirNoDocumento"  Text="{Binding RepetirNoDocumento, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True ,ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" HorizontalAlignment="Left" Height="20" Margin="228,420,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" IsManipulationEnabled="False" TextChanged="RepetirNoDocumento_TextChanged">
        </TextBox>
        <TextBlock Name="RepetirNoDocumentoError" Margin="228,441,582,149"  Foreground="Red" FontWeight="Bold"   Text="{Binding ElementName=RepetirNoDocumento, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}" />
        <DatePicker Name="FechaNacimiento" HorizontalAlignment="Left" Margin="229,466,0,0" VerticalAlignment="Top" SelectedDateChanged="DatePicker_SelectedDateChanged" Height="26" Width="176"/>
        <Label Content="DATOS DE CONTACTO" HorizontalAlignment="Left" Margin="563,96,0,0" VerticalAlignment="Top" Width="199" Background="#FFDD1721" FontSize="14" Foreground="White"/>
        <Label Content="Departamento*" HorizontalAlignment="Left" Margin="563,132,0,0" VerticalAlignment="Top"/>
        <Label Content="Ciudad*" HorizontalAlignment="Left" Margin="563,175,0,0" VerticalAlignment="Top"/>
        <Label Content="Dirección*" HorizontalAlignment="Left" Margin="563,220,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.096"/>
        <Label Content="Barrio" HorizontalAlignment="Left" Margin="563,261,0,0" VerticalAlignment="Top"/>
        <Label Content="Número de Teléfono*" HorizontalAlignment="Left" Margin="563,302,0,0" VerticalAlignment="Top"/>
        <Label Content="Número de Teléfono celular*" HorizontalAlignment="Left" Margin="563,341,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="ListDepartamento"  HorizontalAlignment="Left" Margin="770,132,0,0" VerticalAlignment="Top" Width="280" Text="" SelectionChanged="ListDepartamento_SelectionChanged" />
        <TextBlock Name= "DepartamentoError"  Margin="778,77,32,503"  Visibility="Hidden" Foreground="Red" FontWeight="Bold"   Text="Campo departamento es obigatorio" />
        <ComboBox Name="Ciudad" HorizontalAlignment="Left" Margin="770,176,0,0" VerticalAlignment="Top" Width="280" Text=""/>
        <TextBlock Name= "CiudadError" Visibility="Hidden"  Margin="778,121,32,462"  Foreground="Red" FontWeight="Bold"   Text="Campo ciudad es obigatorio" />
        <TextBox Name="Direccion" HorizontalAlignment="Left" Height="20" Margin="770,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Text="{Binding Direccion, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True ,ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Name= "DireccionError" Margin="770,241,43,338"  Foreground="Red" FontWeight="Bold"   Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}, ElementName=Direccion}" />
        <TextBox Name="Barrio" HorizontalAlignment="Left" Height="20" Margin="770,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Text="{Binding Barrio, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True ,ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Name= "BarrioError" Margin="770,282,40,305"  Foreground="Red" FontWeight="Bold"   Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}, ElementName=Barrio}" />
        <TextBox Name="Telefono" HorizontalAlignment="Left" Height="20" Margin="770,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Text="{Binding Telefono, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True ,ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Name= "TelefonoError" Margin="731,321,40,266"  Foreground="Red" FontWeight="Bold" Validation.ErrorTemplate="{StaticResource validationTemplate}"  Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}, ElementName=Telefono}" />
        <TextBox Name="Celular" Height="20" Margin="770,341,40,0" TextWrapping="Wrap" VerticalAlignment="Top"  Text="{Binding Celular, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True ,ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" />
        <TextBlock Name= "CelularError" Margin="770,362,40,220"  Foreground="Red" FontWeight="Bold"   Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}, ElementName=Celular}" />
        <TextBox  x:Name="CorreoElectronico" HorizontalAlignment="Left" Height="20" Margin="770,382,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"  Text="{Binding CorreoElectronico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"/>
        <TextBlock Margin="770,404,40,180"  Foreground="Red" FontWeight="Bold"   Text="{Binding ElementName=CorreoElectronico, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}" />
        <TextBox Name="CorreoElectronicoRepeat" HorizontalAlignment="Left" Height="20" Margin="770,422,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Text="{Binding CorreoElectronicoRepeat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"/>
        <TextBlock Margin="770,444,40,62"  Foreground="Red" FontWeight="Bold"   Text="{Binding ElementName=CorreoElectronicoRepeat, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource ErrorCollectionConverter}}" />
        <Image x:Name="Logo_back" HorizontalAlignment="Left" Height="94" Margin="-3,526,0,0" VerticalAlignment="Top" Width="1090"/>
        <Button x:Name="GuardarPersona" Content="Guardar Cambios" HorizontalAlignment="Left" Margin="573,484,0,0" VerticalAlignment="Top" Width="182" Height="42" Click="Button_Click" BorderThickness="1" Background="#FFDD1721" BorderBrush="#FF400909" ScrollViewer.CanContentScroll="True" FlowDirection="RightToLeft" VerticalContentAlignment="Center" FontSize="24" FontStretch="SemiCondensed" Grid.IsSharedSizeScope="True" FontFamily="Arial" FontWeight="Bold" TextOptions.TextFormattingMode="Display" ClipToBounds="True" SnapsToDevicePixels="True">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.13"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Effect>
                <DropShadowEffect Color="#FF763D3D"/>
            </Button.Effect>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border" CornerRadius="1,8,1,8" BorderThickness="2" Background="#FFDD1721" BorderBrush="#FFDD1721" ClipToBounds="True" >
                        <Border.Effect>
                            <DropShadowEffect Color="#FF873434" />
                        </Border.Effect>
                        <ContentPresenter Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True">
                            <ContentPresenter.OpacityMask>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" ColorInterpolationMode="ScRgbLinearInterpolation">
                                    <GradientStop Color="#FF700F0F" Offset="0"/>
                                    <GradientStop Color="#FFE22E2E" Offset="1"/>
                                </LinearGradientBrush>
                            </ContentPresenter.OpacityMask>
                        </ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="true">
                            <Setter TargetName="Border" Property="BorderBrush" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="Red" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="#D7910000" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF6E5151" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Volver al Listado"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="242" Height="23"  Margin="22,514,0,0" Click="Button_Click_1">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.13"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Effect>
                <DropShadowEffect Color="#FF763D3D"/>
            </Button.Effect>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="1,8,1,8" BorderThickness="2" Background="#FFDD1721" BorderBrush="#FFDD1721" ClipToBounds="True" >
                        <Border.Effect>
                            <DropShadowEffect Color="#FF873434" />
                        </Border.Effect>
                        <ContentPresenter Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True">
                            <ContentPresenter.OpacityMask>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" ColorInterpolationMode="ScRgbLinearInterpolation">
                                    <GradientStop Color="#FF700F0F" Offset="0"/>
                                    <GradientStop Color="#FFE22E2E" Offset="1"/>
                                </LinearGradientBrush>
                            </ContentPresenter.OpacityMask>
                        </ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="true">
                            <Setter TargetName="Border" Property="BorderBrush" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="Red" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="#D7910000" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF6E5151" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Image Panel.ZIndex="2" Name="Volver" Height="23" Margin="63,516,1005,0" VerticalAlignment="Top" RenderTransformOrigin="-18.125,0.5" />

    </Grid>
</Window>
